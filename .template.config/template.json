{
  "$schema": "http://json.schemastore.org/template",
  "author": "Shane Celis",
  "classifications": [ "Unity3D", "Package" ],
  "name": "Unity Package",
  "identity": "seawisphunter.unitypackage",
  "groupIdentity": "seawisphunter",
  "shortName": "unitypackage",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "sourceName": "unity-package-template",
  "preferNameDirectory":true,
  "symbols": {
    "name": {
      "type": "parameter",
      "defaultValue": "My Package",
      "replaces": "{Template}"
    },
    "company": {
      "type": "parameter",
      "defaultValue": "Acme",
      "replaces": "{Zigurous}",
      "isRequired": true
    },
    "nameNoSpaces": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "ValueWithoutSpaces",
      "fileRename": "Template",
      "replaces": "Template"
    },
    "companyNoSpaces": {
      "type": "derived",
      "valueSource": "company",
      "valueTransform": "ValueWithoutSpaces",
      "fileRename": "Zigurous",
      "replaces": "Zigurous"
    },
    "nameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"nameNoSpaces",
        "toLower": true
      }
    },
    "companyLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "companyNoSpaces",
        "toLower": true
      }
    },
    "fullPackageName": {
      "type": "generated",
      "generator": "join",
      "replaces": "com.zigurous.template",
      "parameters": {
        "separator": ".",
        "symbols": [
          {
            "type": "const",
            "value": "com"
          },
          {
            "type": "ref",
            "value": "companyLower"
          },
          {
            "type": "ref",
            "value": "nameLower"
          }
        ]
      }
    },
    "companyDomain": {
      "type": "generated",
      "generator": "join",
      "replaces": "zigurous.com",
      "parameters": {
        "separator": ".",
        "symbols": [
          {
            "type": "ref",
            "value": "companyLower"
          },
          {
            "type": "const",
            "value": "com"
          }
        ]
      }
    },
    "author": {
      "type": "parameter",
      "defaultValue": "John Smith",
      "replaces": "John Smith"
    },
    "unity": {
      "type": "parameter",
      "defaultValue": "2018.3",
      "replaces":"2019.4"
    },
    "HostIdentifier": {
      "type": "bind",
      "binding": "HostIdentifier"
    },
    "packageType": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "library",
      "choices": [
        { "choice": "tests" },
        { "choice": "sample" },
        { "choice": "template" },
        { "choice": "module" },
        { "choice": "library" },
        { "choice": "tool" }
      ],
      "replaces": "{packageType}"
    }
  },
  "forms": {
    "ValueAfterLastDot": {
      "identifier": "replace",
      "pattern": "^.*\\.(?=[^\\.]+$)",        // regex to match everything up to and including the final "."
      "replacement": ""  // replace it with empty string
    },
    "ValueWithoutSpaces": {
      "identifier": "replace",
      "pattern": " ",
      "replacement": ""
    },
    "global": [ "identity" ]
  },
  "guids": [
