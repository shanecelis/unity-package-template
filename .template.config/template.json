{
  "$schema": "http://json.schemastore.org/template",
  "author": "Shane Celis",
  "classifications": [ "Unity3D", "Package" ],
  "name": "Unity Package",
  "identity": "seawisphunter.unitypackage",
  "groupIdentity": "seawisphunter",
  "shortName": "unitypackage",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "sourceName": "unity-package-template",
  "preferNameDirectory":true,
  "symbols": {
    "name": {
      "type": "parameter",
      "defaultValue": "My Package",
      "replaces": "{Template}"
    },
    "company": {
      "type": "parameter",
      "defaultValue": "Acme",
      "replaces": "{Zigurous}"
    },
    "nameNoSpaces": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "ValueWithoutSpaces",
      "fileRename": "Template",
      "replaces": "Template"
    },
    "companyNoSpaces": {
      "type": "derived",
      "valueSource": "company",
      "valueTransform": "ValueWithoutSpaces",
      "fileRename": "Zigurous",
      "replaces": "Zigurous"
    },
    "nameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"nameNoSpaces",
        "toLower": true
      }
    },
    "companyLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "companyNoSpaces",
        "toLower": true
      }
    },
    "fullPackageName": {
      "type": "generated",
      "generator": "join",
      "replaces": "com.zigurous.template",
      "parameters": {
        "separator": ".",
        "symbols": [
          {
            "type": "const",
            "value": "com"
          },
          {
            "type": "ref",
            "value": "companyLower"
          },
          {
            "type": "ref",
            "value": "nameLower"
          }
        ]
      }
    },
    "companyDomain": {
      "type": "generated",
      "generator": "join",
      "replaces": "zigurous.com",
      "parameters": {
        "separator": ".",
        "symbols": [
          {
            "type": "ref",
            "value": "companyLower"
          },
          {
            "type": "const",
            "value": "com"
          }
        ]
      }
    },
    "author": {
      "type": "parameter",
      "defaultValue": "John Smith",
      "replaces": "John Smith"
    },
    "unity": {
      "type": "parameter",
      "defaultValue": "2018.3",
      "replaces":"2019.4"
    }
  },
  "forms": {
    "ValueAfterLastDot": {
      "identifier": "replace",
      "pattern": "^.*\\.(?=[^\\.]+$)",        // regex to match everything up to and including the final "."
      "replacement": ""  // replace it with empty string
    },
    "ValueWithoutSpaces": {
      "identifier": "replace",
      "pattern": " ",
      "replacement": ""
    },
    "global": [ "identity" ]
  },
  "guids": [
    "a14955afcaedcdc4593859f360004f31",
    "17744dc8841f01845950176f54e87817",
    "fe09d9e5121f61d46ba3a40d11da447b",
    "e993d0025bd900f4587d33da9e67a8a1",
    "2dcb02c4ba1b25141b7cb25e25135974",
    "11163bd9f181f4b489c96e3d91a4d07f",
    "da7f2eeb1876b664eabfd0d97f61d041",
    "96cc9e30d405f79469af0fc01a07e76b",
    "b99b5721514f6b34ba687038e889c707",
    "f981e48cd0cbde246b1f5fe65ebb00fd",
    "abe1f18a4d378414baf7bf212b7106d5",
    "0acea71f743abe647a4a0f888d3f45d8",
    "00c2477adb71bbc40b96d2e2ed903614"
  ],
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ ".git/**" ]
        }
      ]
    }
  ]

}
